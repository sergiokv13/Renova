<section id="contact" class="panelwhite plusplus">
<div class="additionalContentwhite">
  <div class="container-fluid text-center">
    <h2>Contacto</h2>
    <div class="row center-block">
<div class="col-lg-12">
    <h3>Información de Contacto</h3>
    <div class="col-lg-3 col-md-3 col-xs-3"></div>
    <div id="contactoWrapper" class="col-lg-6 col-md-6 col-xs-6">
      <strong>Correo Electrónico:</strong> info@dual-designers.com <br> <br>
      <strong>Teléfonos:</strong> (+591) 77498233 - (+591) 79777396 - (+591) 79365071 <br>
    </div>
    
    <%= form_for(@mensaje) do |f| %>
      <% if @mensaje.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@mensaje.errors.count, "error") %> prohibited this mensaje from being saved:</h2>

          <ul>
          <% @mensaje.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
    <% end %>

    <div class="clear"></div>
    <div class="row col-md-12 center-block">
      <div class="col-md-2 col-lg-2"></div>
      <div class="col-md-4 col-lg-4text-center">
        <div class="form-group">
          <h3 style="color:#white;">Nombre*</h3>
          <%= f.text_field :nombre, :size => "40x1", :maxlength => 30, :placeholder => "Ingresa tu Nombre Completo", :class=> 'form-control'%>
        </div>
        <div class="form-group">
          <h3 style="color:#white;">Correo Electrónico*</h3>
          <%= f.text_field :email , :size => "40x1", :maxlength => 30, :placeholder => "Ingresa tu Dirección de Correo Electrónico", :class=> 'form-control' %>
        </div>
      </div>
      <div class="col-md-4 col-lg-4 text-center">
        <div class="form-group">
          <h3 style="color:#white;">Mensaje*</h3>
          <%= f.text_area :contenido_mensaje , :size => "30x14", :maxlength => 500, :placeholder => "Déjanos tu Mensaje", :class=> 'form-control'%>
        </div>
      </div>

      <div class="row visible-xs">
        <div id="success" >
          <button type="submit" class="btn btn-xl">Enviar Mensaje</button>
        </div>  
      </div>

      <div class="col-lg-3 hidden-xs"></div>
      <div class="col-lg-6 hidden-xs">
        <div id="success" >
          <button type="submit" class="btn btn-xl">Enviar Mensaje</button>
        </div>  
      </div>
      <% end %>
    </div>
    </div>
  </div>
</div>
 </section>
